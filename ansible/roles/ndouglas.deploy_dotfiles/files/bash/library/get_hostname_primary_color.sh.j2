#!/usr/bin/env bash

# Get the primary color for the hostname.
nd_get_hostname_primary_color() {
  : "${1?"Usage: ${FUNCNAME[0]} HOSTNAME"}";
  the_hostname="${1}";
  case "${the_hostname}" in
  {% for item in hostvars %}
    {{ item }}*) color="$(tput setaf {{ hostvars[item].prompt.colors.primary }})";;
  {% endfor %}
    *)           color="$(tput setaf 2)";;
  esac
  echo "${color}";
}
